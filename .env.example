# 🗄️ Database Configuration
# Neon PostgreSQL (Recomendado para produção)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# 🔐 Security
# Gere uma chave secreta forte para produção
SESSION_SECRET="your_super_secret_session_key_here_change_in_production"
NODE_ENV="development"

# 🌐 Application URLs
# URLs para comunicação entre frontend e backend
FRONTEND_URL="http://localhost:5173"
BACKEND_PORT="3001"

# 📁 File Upload Configuration
# Diretório para uploads de arquivos
UPLOAD_DIR="uploads"
# Tamanho máximo de arquivo em bytes (5MB)
MAX_FILE_SIZE="5242880"

# 📊 Logging
# Nível de log para desenvolvimento
LOG_LEVEL="info"

# 🚀 Vercel Configuration (apenas para deploy)
# VERCEL_PROJECT_ID="your_vercel_project_id"
# VERCEL_ORG_ID="your_vercel_org_id"

# 📧 Email Configuration (opcional)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your_email@gmail.com"
# SMTP_PASS="your_app_password"

# 💳 Payment Gateway (opcional)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."

# 📱 Push Notifications (opcional)
# VAPID_PUBLIC_KEY="your_vapid_public_key"
# VAPID_PRIVATE_KEY="your_vapid_private_key"

# 🔧 Development Tools
# Drizzle Studio (opcional)
# DRIZZLE_STUDIO_PORT="4983"

# 📈 Analytics (opcional)
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ⚠️ IMPORTANTE:
# 1. Copie este arquivo para .env
# 2. Preencha as variáveis com seus valores reais
# 3. NUNCA commite o arquivo .env para o repositório
# 4. Use valores diferentes para produção